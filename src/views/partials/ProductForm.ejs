 <!-- REGISTER-AREA -->
 <div class="offcanvas offcanvas-end w-50" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title fs-5" id="offcanvasRightLabel">Novo Produto</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
      <fieldset id="register-area" class="register-area d-flex align-items-start justify-content-center">
        <form   enctype="multipart/form-data" class="row g-3 w-100" action="/product/create/" method="post">  
          <div class="w-100 d-flex align-items-center justify-content-start ">
            <div class="profile-pic">
              <label class="-label" for="file">
                <span class="glyphicon glyphicon-camera"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
                  <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4z"/>
                  <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5m0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7M3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"/>
                </svg></span>
                <span>Change Image</span>
              </label> 
              <input id="file" type="file" name="productPhoto" accept="image/png image/jpg image/jpeg" onchange="loadFile(event)"/>
              <img src="/utilites/material-new.png" id="output" width="200" />
            </div>
          </div>
          <div class="col-md-6"> 
            <label for="inputProduct4" class="form-label">Nome do Produto/Serviço</label>
            <input type="text" class="form-control" name="name" required id="inputProduct4">
          </div>
          <div class="col-md-6">
            <label for="inputSKU4" class="form-label">SKU</label>
            <input type="text" name="sku" class="form-control"  required id="inputSKU4" placeholder="SKU-CODE">
          </div>
          <div class="col-md-6">
            <label for="inputDesc" class="form-label">Categoria <span
                style="color: #0B5ED7; font-weight: bold; cursor: pointer;" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">+</span></label>
            <select class="form-select" required name="category" aria-label="Default select example">
              <option selected disabled>Selecione a Categoria</option>
              <% categories.forEach(category=>{ %>
                <option value="<%= category.name %>">
                  <%= category.name %>
                </option>
                <% }) %>
                  <option value="Nenhum">Nenhum</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="inputDesc" class="form-label">Descrição</label>
            <input type="text"  required class="form-control" name="description" id="inputDesc"
              placeholder="Descrição do Produto">
          </div>
          
          <div class="col-md-4">
            <label for="inputWeight" class="form-label">Preço R$</label>
            <input type="text" required name="price" format="currency" precision="2" class="money form-control" id="inputWeight" placeholder="R$ 00,00">
          </div>
          <div class="col-md-4">
            <label for="inputBrand" class="form-label">Marca</label>
            <input type="text" required name="brand" class="form-control" id="inputBrand">
          </div>

          <div class="col-md-4">
            <label for="inputDate" class="form-label">Date</label>
            <input  required type="datetime-local" name="date" class="form-control" id="inputDate">
          </div>
         
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Cadastrar Produto</button>
          </div>
        </form>
      </fieldset>
    </div>
  </div>